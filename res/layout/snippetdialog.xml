<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="wrap_content" android:layout_height="wrap_content"
 android:orientation="vertical">
 
 <ScrollView android:layout_height="wrap_content" android:id="@+id/scrollView1" android:layout_width="fill_parent">
     <LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">
 <ImageView android:id="@+id/ImageView02" android:src="@drawable/snips"
 android:layout_width="wrap_content" android:layout_marginBottom="14dip" android:layout_centerHorizontal="true" android:layout_height="wrap_content"/>
 
 <TextView android:text="Date: " android:id="@+id/snipDialogDate"
 android:layout_width="wrap_content" android:layout_height="wrap_content" />
 
 <TextView android:text="Time: " android:id="@+id/snipDialogTime"
 android:layout_width="wrap_content" android:layout_height="wrap_content" />
 
 <TextView android:text="Notes: " android:id="@+id/snipDialogNotes"
 android:layout_width="wrap_content" android:layout_height="wrap_content" />
 
 <TextView android:text="URL: " android:id="@+id/snipDialogURL"
 android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/blueline"/>
 
 <TextView android:text="Snippet: " android:id="@+id/snipDialogContent"
 android:layout_width="wrap_content" android:layout_height="wrap_content" />    
     </LinearLayout>
 </ScrollView>
 
 
</LinearLayout>